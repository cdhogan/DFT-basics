#!/usr/bin/env bash

SAVE=plot_script_epsilon_bands

cat > ${SAVE}.gnu <<EOF
#!/usr/bin/gnuplot

set term x11 enhanced

set xlabel "Energy (eV)"
set ylabel "ɛ_1, ɛ_2"
set xrange [0:10]
set xtics 1
set mxtics 5

plot 	\
     	"epsilon_script_b5/epsi_Si.dat" t "5 bands" w l dt 1 lc "orange","epsilon_script_b5/epsr_Si.dat" t "" w l dt 4 lc "orange",\
     	"epsilon_script_b8/epsi_Si.dat" t "8 bands" w l dt 1 lc "red","epsilon_script_b8/epsr_Si.dat" t "" w l dt 3 lw 2 lc "red",\
     	"epsilon_script_b12/epsi_Si.dat" t "12 bands" w l dt 1 lc "blue","epsilon_script_b12/epsr_Si.dat" t "" w l dt 4 lc "blue",\
     	"epsilon_script_b16/epsi_Si.dat" t "16 bands" w l dt 1 lc "black","epsilon_script_b16/epsr_Si.dat" t "" w l dt 4 lc "black",\
	0 t "" w l lt 1 lc "black"

#plot "epsilon_script_b5/eels_Si.dat" w l,"epsilon_script_b10/eels_Si.dat" w l,"epsilon_script_b15/eels_Si.dat" w l,"epsilon_script_b20/eels_Si.dat" w l dt 2

#plot \
#	'$SAVE0'  u 1:3 w lp pt 7 lw 2  lc rgb "black" title "E vs NxNxN 000",\
#	'$SAVE0'  u 1:3:2 w labels offset char 1,1 notitle,\
#	'$SAVE1'  u 1:3 w lp pt 7 lw 2  lc rgb "red" title "E vs NxNxN 111",\
#	'$SAVE1'  u 1:3:2 w labels offset char 1,-1 notitle,\
#        -15.84773834+(0.001*2) w l lt 1 dt 2 lc "green" t "+1 mRy/atom",\
#        -15.84773834-(0.001*2) w l lt 1 dt 2 lc "green" t "-1 mRy/atom"
pause -1
set term pngcairo enhanced size 800,400
set output "${SAVE}.png"
replot
EOF

gnuplot ${SAVE}.gnu


exit




